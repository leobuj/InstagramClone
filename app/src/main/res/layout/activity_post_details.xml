<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ivProfileImageDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetails">

    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_below="@+id/tvDetailUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="3dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivProfileDetails"
        android:layout_width="111dp"
        android:layout_height="71dp"
        android:layout_below="@+id/tvDetailUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="300dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDetailUsername"
        android:layout_width="225dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescriptionDetails"
        android:layout_width="363dp"
        android:layout_height="95dp"
        android:layout_below="@+id/ivDetailImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="315dp"
        android:layout_height="31dp"
        android:layout_below="@+id/tvDescriptionDetails"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textSize="18sp"
        android:visibility="visible" />
</RelativeLayout>